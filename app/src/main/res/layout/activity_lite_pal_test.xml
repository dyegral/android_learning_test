<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LitePalTestActivity">


    <Button
        android:id="@+id/btn_create_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/create_db"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="添加数据"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_db"
        app:layout_constraintStart_toStartOf="@+id/btn_create_db"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_db" />

    <Button
        android:id="@+id/btn_query_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="查询"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_db"
        app:layout_constraintStart_toStartOf="@+id/btn_add_db"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_db" />

    <Button
        android:id="@+id/btn_delete_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="删除全部"
        app:layout_constraintEnd_toEndOf="@+id/btn_query_db"
        app:layout_constraintStart_toStartOf="@+id/btn_query_db"
        app:layout_constraintTop_toBottomOf="@+id/btn_query_db" />

    <Button
        android:id="@+id/btn_update_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="更新（修改）数据"
        app:layout_constraintEnd_toEndOf="@+id/btn_delete_db"
        app:layout_constraintStart_toStartOf="@+id/btn_delete_db"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete_db" />
</androidx.constraintlayout.widget.ConstraintLayout>